packages:
  yum:
    newrelic-sysmond: []
  rpm:
    newrelic: http://yum.newrelic.com/pub/newrelic/el5/x86_64/newrelic-repo-5-3.noarch.rpm
container_commands:
  configure_new_relic:
    command: nrsysmond-config --set license_key=$NEW_RELIC_LICENSE_KEY
  start_new_relic:
    command: /etc/init.d/newrelic-sysmond start
